{
  "name": "luxury-ecommerce",
  "version": "1.0.0",
  "description": "Luxury e-commerce website inspired by Tiffany & Co.",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:production": "npm run build && npm run server:production",
    "server:production": "NODE_ENV=production node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "install:production": "npm ci --only=production && cd client && npm ci --only=production",
    "seed": "node server/database/seed.js",
    "db:setup": "node server/database/setup.js",
    "start": "NODE_ENV=production node server/index.js",
    "postinstall": "cd client && npm install"
  },
  "keywords": ["ecommerce", "luxury", "jewelry", "tiffany"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "stripe": "^14.7.0",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
