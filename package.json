{
  "name": "luxury-ecommerce",
  "version": "1.0.0",
  "description": "Luxury e-commerce website inspired by Tiffany & Co.",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/database/seed.js",
    "db:setup": "node server/database/setup.js",
    "docker:build": "docker build -t luxury-ecommerce .",
    "docker:run": "docker run -p 5000:5000 luxury-ecommerce",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "keywords": ["ecommerce", "luxury", "jewelry", "tiffany"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "stripe": "^14.7.0",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
