# Production Environment Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=http://localhost:5000

# Database Configuration (Update with your production database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=luxury_ecommerce_prod
DB_USER=postgres
DB_PASSWORD=your_production_password_here

# JWT Configuration (Use a strong secret in production)
JWT_SECRET=your-super-secure-production-jwt-secret-key-here

# Stripe Configuration (Use live keys for production)
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_app_password_here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Cloud Storage (Required for production)
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Security
CORS_ORIGIN=http://localhost:5000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
